<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_delivery_carrier_form_with_provider_dhl" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.dhl</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="EasyPost Configuration" attrs="{'invisible': ['!', ('delivery_type', '=like', 'ep\_%%')]}">
                    <group>
                        <group>
                            <field name="easypost_account" attrs="{'required': [('delivery_type', '=like', 'ep\_%%')]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
